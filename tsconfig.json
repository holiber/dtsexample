{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "es7",
      "ES2017"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "isolatedModules": false,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,

    "outDir": "dist",
    "sourceMap": true,
    "strictNullChecks": false,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}